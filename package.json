{
  "name": "clipforge",
  "version": "1.0.0",
  "description": "Desktop video editor built in 72 hours",
  "main": "dist-electron/src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "electron:dev": "tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && tsc -p tsconfig.main.json && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjjorgenson/gauntlet-clipforge.git"
  },
  "keywords": [
    "video-editor",
    "electron",
    "desktop-app"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jjjorgenson/gauntlet-clipforge/issues"
  },
  "homepage": "https://github.com/jjjorgenson/gauntlet-clipforge#readme",
  "dependencies": {
    "electron": "^39.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.18",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.38.0",
    "postcss": "^8.5.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "wait-on": "^9.0.1"
  }
}
